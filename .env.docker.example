# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (Docker)
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=drive_db

# JWT Configuration
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=7d

# File Upload Configuration
# storage provider: 'local' (inside container) or 's3' (recommended for production)
STORAGE_PROVIDER=s3
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=52428800 # 50MB

# AWS S3 / Supabase / R2 Configuration
# Make sure to fill these if using STORAGE_PROVIDER=s3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=your_bucket_name
# For Supabase/R2, provide the full endpoint URL
AWS_ENDPOINT=https://your-project-ref.supabase.co/storage/v1/s3
