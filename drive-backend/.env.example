NODE_ENV=development
PORT=3000

# Database - Option 1: Connection URL (recommended for Neon/cloud)
DATABASE_URL=postgresql://neondb_owner:npg_0AuJamVfn1DF@ep-damp-rain-afve1wjk-pooler.c-2.us-west-2.aws.neon.tech/neondb?sslmode=require&channel_binding=require

